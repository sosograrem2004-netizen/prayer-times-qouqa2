    document.body.style.backgroundImage = 'url("background1.png")';
  } else { // 7 ØµØ¨Ø§Ø­Ù‹Ø§ â†’ 7 Ù…Ø³Ø§Ø¡Ù‹
    document.body.style.backgroundImage = 'url("background3.png")';
  }
}

