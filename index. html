  c.innerHTML="";
  rows=[];
  prayerNames.forEach((n,i)=>{
    const r=document.createElement("div");
    r.className="row";
    r.innerHTML=`<span>${n}</span><span id="t${i}">--:--</span>`;
    c.appendChild(r);
    rows.push(r);
  });
}

// ===== ØªØ­Ø¯ÙŠØ« Ø§Ù„ØªØ§Ø±ÙŠØ® ÙˆØ§Ù„ÙˆÙ‚Øª =====
function updateDateAndTimes(){
